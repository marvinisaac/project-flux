{
    "version": 3,
    "endpoints": [
        {
            "endpoint": "/backend",
            "backend": [
                {
                    "host": [ "http://backend:3000" ],
                    "url_pattern": "/"
                }
            ]
        },
        {
            "endpoint": "/login",
            "backend": [
                {
                    "host": [ "http://login:3000" ],
                    "url_pattern": "/"
                }
            ]
        },
        {
            "endpoint": "/token",
            "backend": [
                {
                    "host": [ "http://login:3000" ],
                    "url_pattern": "/"
                }
            ],
            "extra_config": {
                "auth/signer": {
                    "alg": "RS256",
                    "jwk_local_path": "/keys/private-public-keys.json",
                    "disable_jwk_security": true,
                    "keys_to_sign": [ "access_token" ]
                }
            }
        },
        {
            "endpoint": "/protected",
            "backend": [
                {
                    "host": [ "http://login:3000" ],
                    "url_pattern": "/"
                }
            ],
            "extra_config": {
                "auth/validator": {
                    "alg": "RS256",
                    "jwk_local_path": "/keys/public-key.json",
                    "disable_jwk_security": true,
                    "operation_debug": true
                }
            }
        }
    ]
}
